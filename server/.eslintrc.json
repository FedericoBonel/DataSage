{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "airbnb-base", "plugin:jest/recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        // We are in node so we need to ask for extensions
        "import/extensions": ["error", "always"],
        "quotes": ["error", "double"],
        "prefer-destructuring": "off",
        // In express you need to use unused vars in some middleware
        "no-unused-vars": "off",
        "import/prefer-default-export": "warn",
        // In this api we are exposing the ids generated by mongo as _id
        "no-underscore-dangle": ["error", { "allow": ["_id"] }]
    }
}
